{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "*": ["./src/*"],
      "components/*": ["./src/components/*"],
      "utils/*": ["./src/utils/*"],
      "styles/*": ["./src/assets/styles/*"],
      "assets/*": ["./src/assets/*"],
      "images/*": ["./src/assets/images/*"],
      "layouts/*": ["./src/layouts/*"],
      "pages/*": ["./src/pages/*"],
      "svg/*": ["./src/assets/svg/*"],
      "hooks/*": ["./src/hooks/*"],
      "routes/*": ["./src/routes/*"],
      "api/*": ["./src/api/*"],
      "context/*": ["./src/context/*"],
    }
  },
  
	"exclude": [
		"node_modules",
		"dist",
		"build"
	]
}